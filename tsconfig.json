{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "nodenext",      
    "moduleResolution": "nodenext",      
    "esModuleInterop": true, 
    "rootDir": "./",   
    "outDir": "./dist",     
    "forceConsistentCasingInFileNames": true,
    "strict": true,                  
    "skipLibCheck": true,            
    "sourceMap": true,
    "types": ["node", "pg"]          
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules","dist"]
}
